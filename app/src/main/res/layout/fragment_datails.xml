<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".Datail.DatailsFragment">

    <TextView
        android:id="@+id/status_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Alive"
        android:textColor="@color/teal_700"
        android:textSize="26dp"
        android:textStyle="bold|italic|normal"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_Des"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/rick"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="w,3:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_des" />

    <TextView
        android:id="@+id/textname"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_Des"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="Name    : "/>

    <TextView
        android:id="@+id/name_Des"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textname"
        app:layout_constraintBottom_toBottomOf="@id/textname"
        app:layout_constraintTop_toTopOf="@id/textname"
        android:layout_marginStart="16dp"
        android:text="Ric Sanchez"/>

    <TextView
        android:id="@+id/txtspeise"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specie   : "
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textname"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/specie_Des"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human"
        app:layout_constraintTop_toTopOf="@id/txtspeise"
        app:layout_constraintBottom_toBottomOf="@id/txtspeise"
        app:layout_constraintStart_toStartOf="@id/name_Des"/>

    <TextView
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Gender   : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtspeise" />

    <TextView
        android:id="@+id/gender_Des"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/specie_Des"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Origin      : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gender_Des"
    />

    <TextView
        android:id="@+id/origin_Des"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="earth(C-137"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/gender_Des"
        app:layout_constraintTop_toTopOf="@+id/textView2"
    />


    <TextView
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Location : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/origin_Des"
    />

    <TextView
        android:id="@+id/location_Des"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="earth(Replacement Dimension)"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/origin_Des"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes:"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_Des"/>

    <TextView
        android:id="@+id/episode_Des"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="41"

        app:layout_constraintStart_toStartOf="@id/location_Des"
        app:layout_constraintTop_toTopOf="@id/textView4"/>





</androidx.constraintlayout.widget.ConstraintLayout>